{
  "name": "blizzardts-starter",
  "version": "1.0.0",
  "description": "Starter template for BlizzardTS applications",
  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "start": "bun run src/index.ts",
    "dev": "bun run --watch src/index.ts",
    "build:css": "tailwindcss -i ./src/input.css -o ./public/styles.css --watch"
  },
  "dependencies": {
    "blizzardts": "latest"
  },
  "devDependencies": {
    "autoprefixer": "10.4.17",
    "bun-types": "latest",
    "clsx": "^2.1.1",
    "postcss": "8.4.35",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "3.4.1",
    "typescript": "^5.0.0"
  }
}
